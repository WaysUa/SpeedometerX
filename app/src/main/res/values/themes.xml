<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SpeedometerX" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="Theme.SpeedometerX.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/speedometer_app_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SpeedometerX</item>
</style>
</resources>